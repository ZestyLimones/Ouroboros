<div class="logs">

  <div class="daily-log-container log-group card">
    <h2>Daily Log</h2>
    <form class="form daily-log-form">
      <div class="form-group">
        <label for="date">Date:</label>
        <input class="form-input" type="date" id="date-log" />
      </div>
      {{#each activities as |activity|}}
      <div class="activity-log">
        <label for="{{activity.name}}">{{activity.name}}</label>
        <input class="form-input activity-input" type="checkbox" name="{{activity.name}}" value="{{activity.id}}"/>
      </div>
        {{/each}}
      <div class="form-group">
        <label for="journal-entry">Journal Entry:</label>
        <input class="form-input" type="text" id="journal-log" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>

  <div class="history-container log-group card">
    <h2>History</h2>
    <table class="history-content">
      <tr>
        <th>Date</th>
        <th>journal Entry</th>
        <th>activities</th>
        <th>Emotion</th>
      </tr>
      {{#each dailyHistory as |history|}}
      <tr>
        <td>{{history.date}}</td>
        <td>{{history.journal}}</td>
        <td class='activity-table-data'>
          {{#each activityLogs as |activityLog|}}
          <ul>
            <li>{{activityLog.activity.name}}</li>
          </ul>
          {{/each}}
        </td>
        <td class="no-border">{{history.emotion}}</td>
      </tr>
      {{/each}}
  
    </table>
  </div>

</div>

<script src="/js/daily_log.js"></script>