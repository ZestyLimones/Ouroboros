<h2>Welcome, {{first_name}}</h2>
<h3>{{setting.bio}}</h3>
<a href="/daily-log-entry">
<button>Daily Log</button>
</a>
<!--Temp variable capture
{{activity.name}}: - {{activity.userPercent}} %
-->

{{#each user_activities as |activity|}}
{{activity.name}}
<div class="progress" data-percent="{{activity.userPercent}}">
  <div class="skill">
  <div class="outer">
    <div class="inner">
      <div id="number">
      </div>
    </div>
  </div>
  <!-- this will be customized later! -->
  <svg xmlns="http://www.w3.org/2000/svg" version="1.1" width="160px" height="160px">
         <defs>
            <linearGradient id="GradientColor">
               <stop offset="0%" stop-color="#c3446f" />
               <stop offset="50%" stop-color="#95965e" />
               <stop offset="100%" stop-color="#5e967b" />
            </linearGradient>
         </defs>
         <circle class="anim-{{activity.userPercent}}" cx="80" cy="80" r="70" stroke-linecap="round" />
 </svg> 

 </div>
  <div class="carousel" data-flickity='{ "wrapAround": true }'>
    <div class="carousel-cell"><img src="https://picsum.photos/id/236/200/300" alt="placeholder image 1"></div>
    <div class="carousel-cell"><img src="https://picsum.photos/id/237/200/300" alt="placeholder image 2"></div>
    <div class="carousel-cell"><img src="https://picsum.photos/id/238/200/300" alt="placeholder image 3"></div>
    <div class="carousel-cell"><img src="https://picsum.photos/id/239/200/300" alt="placeholder image 4"></div>
  </div>
</div>
{{/each}} 


<script src = "/js/progress-bar.js"></script>
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
<a href="/account-settings">
<button>Account Settings</button>
</a>