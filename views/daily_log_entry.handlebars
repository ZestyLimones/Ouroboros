<div class="logs">

  <div class="daily-log-container log-group card">
    <h2>Daily Log</h2>
    <form class="form daily-log-form">
      <div class="form-group">
        <label for="date">Date:</label>
        <input class="form-input" type="date" id="date-log" />
      </div>
      {{#each activities as |activity|}}
      <div class="activity-log">
        <label for="{{activity.name}}">{{activity.name}}</label>
        <input class="form-input activity-input" type="checkbox" name="{{activity.name}}" value="{{activity.id}}"/>
      </div>
        {{/each}}
      <div class="form-group">
        <label for="journal-entry">Journal Entry:</label>
        <input class="form-input" type="text" id="journal-log" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
  </div>

  <div class="history-container log-group card">
    <h2>History</h2>
    <div class="history-content">
      <div class='history-date'>
      <p>the date will go here</p>
    </div>
    <div class="history-entry">
      <div class="history-journal-entry">
        <p>The sun is shining, the tank is clean!</p>
      </div>
      <div class="history-actvities">
        <p>list of the activities</p>
      </div>
    </div>
    <div class="history-emotion">
      <p>ewe feelings</p>
    </div>
    </div>
  </div>
</div>

<script src="/js/daily_log.js"></script>